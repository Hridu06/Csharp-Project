@model lab_task.Models.Student

@{
    ViewBag.Title = "Confirmation";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-success">
                <div class="card-header bg-success text-white text-center">
                    <h2>Student Registered Successfully!</h2>
                </div>
                <div class="card-body text-center">
                    <p class="fs-5"><strong>Name:</strong> @Model.Name</p>
                    <p class="fs-5"><strong>Email:</strong> @Model.Email</p>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary mt-3">Back to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>
@{
    ViewBag.Title = "Result";
}
 <h2>Calculation Results</h2>
 <p><strong>Sum:</strong> @ViewBag.Sum</p>
 <p><strong>Difference:</strong> @ViewBag.Difference</p> 
 <p><strong>Multiplication:</strong> @ViewBag.Product</p>