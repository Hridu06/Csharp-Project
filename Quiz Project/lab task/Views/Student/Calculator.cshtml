@{
    ViewBag.Title = "Calculator";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-white text-center">
                    <h2>Simple Calculator</h2>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Calculate", "Student", FormMethod.Post))
                    {
                        <div class="mb-3">
                            <label class="form-label">Number 1</label>
                            <input type="number" name="a" class="form-control" placeholder="Enter first number" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Number 2</label>
                            <input type="number" name="b" class="form-control" placeholder="Enter second number" required />
                        </div>

                        <div class="text-center">
                            <input type="submit" value="Calculate" class="btn btn-primary px-4" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
