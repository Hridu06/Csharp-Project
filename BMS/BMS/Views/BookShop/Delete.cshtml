@model BMS.Models.BookShop

@{
    ViewData["Title"] = "Delete BookShop";
}

<h1>Delete BookShop Entry</h1>

<h3>Are you sure you want to delete this entry?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Book</dt>
        <dd class="col-sm-10">@Model.Book?.Title</dd>
        <dt class="col-sm-2">Shop</dt>
        <dd class="col-sm-10">@Model.Shop?.Name</dd>
        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="BookShopId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
