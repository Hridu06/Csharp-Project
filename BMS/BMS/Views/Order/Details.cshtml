@model BMS.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<h2>Order Details</h2>

<dl class="row">
    <dt class="col-sm-2">Customer</dt>
    <dd class="col-sm-10">@Model.Customer?.FullName</dd>

    <dt class="col-sm-2">Book</dt>
    <dd class="col-sm-10">@Model.BookShop?.Book?.Title</dd>

    <dt class="col-sm-2">Shop</dt>
    <dd class="col-sm-10">@Model.BookShop?.Shop?.Name</dd>

    <dt class="col-sm-2">Quantity</dt>
    <dd class="col-sm-10">@Model.Quantity</dd>

    <dt class="col-sm-2">Total Price</dt>
    <dd class="col-sm-10">@Model.TotalPrice</dd>

    <dt class="col-sm-2">Order Date</dt>
    <dd class="col-sm-10">@Model.OrderDate.ToLocalTime()</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.OrderId" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back</a>
