@model IMS.Models.Shipment

@{
    ViewData["Title"] = "Delete Shipment";
}

<h2>Delete Shipment</h2>

<h3>Are you sure you want to delete this shipment?</h3>

<div>
    <h4>@Model.Product.Name - @Model.Supplier.CompanyName</h4>
    <p>Warehouse: @Model.Warehouse.Name</p>
    <p>Quantity: @Model.Quantity</p>
    <p>Total Cost: @Model.TotalCost.ToString("C")</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="ShipmentId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

