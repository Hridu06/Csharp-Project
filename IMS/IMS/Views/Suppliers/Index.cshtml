@model IEnumerable<IMS.Models.Supplier>

@{
    ViewData["Title"] = "Suppliers";
}

<h2>Suppliers</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Supplier</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Company Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CompanyName</td>
                <td>@item.ContactEmail</td>
                <td>@item.ContactPhone</td>
                <td>@item.Address</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.SupplierId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.SupplierId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.SupplierId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

