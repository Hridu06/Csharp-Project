@model IEnumerable<IMS.Models.ProductWarehouse>

<h2>Product Warehouses</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Add New</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Product</th>
            <th>Warehouse</th>
            <th>Quantity</th>
            <th>Last Updated</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Warehouse.Name</td>
                <td>@item.Quantity</td>
                <td>@item.LastUpdated</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ProductWarehouseId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.ProductWarehouseId" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.ProductWarehouseId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
