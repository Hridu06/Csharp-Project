@model IMS.Models.Warehouse

@{
    ViewData["Title"] = "Edit Warehouse";
}

<h1>Edit Warehouse</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="WarehouseId" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StorageCapacity"></label>
        <input asp-for="StorageCapacity" class="form-control" />
        <span asp-validation-for="StorageCapacity" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
