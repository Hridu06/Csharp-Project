@model IMS.Models.Warehouse

@{
    ViewData["Title"] = "Delete Warehouse";
}

<h1>Delete Warehouse</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>@Model.Name</h4>
    <dl class="row">
        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>

        <dt class="col-sm-2">Storage Capacity</dt>
        <dd class="col-sm-10">@Model.StorageCapacity</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="WarehouseId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
